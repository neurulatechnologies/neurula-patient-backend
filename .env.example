# Application Settings
APP_NAME=Neurula Health API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://neurula:neurula_password@localhost:5432/neurula_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_OTP_DB=1
REDIS_SESSION_DB=2

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
AES_ENCRYPTION_KEY=your-32-byte-aes-key-here-change-in-production
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=30

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,exp://192.168.1.100:8081

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
OTP_RATE_LIMIT_PER_HOUR=5

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@neurula.health
SMTP_FROM_NAME=Neurula Health

# SMS Configuration (for future use)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+971xxxxxxxxx

# File Storage (MinIO/S3 - for future use)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=neurula-files
S3_REGION=us-east-1

# External APIs
NABIDH_API_URL=https://api.nabidh.ae/v1
NABIDH_API_KEY=your-nabidh-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
